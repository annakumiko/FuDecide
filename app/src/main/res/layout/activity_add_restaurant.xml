<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".AddRestaurant">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="Restaurant Background"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/restoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/karla"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/restoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/karla"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Description" />

    <EditText
        android:id="@+id/openHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/karla"
        android:inputType="time"
        android:text="Opening Time" />

    <EditText
        android:id="@+id/closeHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/karla"
        android:inputType="time"
        android:text="Closing Time" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/karla"
        android:text="Menu Items"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/menuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/karla"
            android:inputType="textPersonName"
            android:text="Name" />

        <EditText
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/karla"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Description" />

        <EditText
            android:id="@+id/itemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/karla"
            android:inputType="numberDecimal"
            android:text="Price" />

    </LinearLayout>

    <Button
        android:id="@+id/addItemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:backgroundTint="#818887"
        android:fontFamily="@font/karla"
        android:text="MENU ITEM +"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/addRestoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#48D8BF"
        android:fontFamily="@font/karla"
        android:text="ADD RESTAURANT"
        app:cornerRadius="20dp" />

</LinearLayout>